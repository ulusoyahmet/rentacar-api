@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Update Banner(@Model.BannerID)</h4>
				<p class="card-subtitle mb-4">Please fullfill all the fields with required information.</p>

				<form method="post">
					<input type="hidden" asp-for="BannerID" />

					<div class="form-group">
						<label for="InputTitle">Title</label>
						<input type="text" class="form-control" id="InputTitle" asp-for="Title" placeholder="Title">
					</div>
					<div class="form-group">
						<label for="InputDescription">Description</label>
						<input type="text" class="form-control" id="InputDescription" asp-for="Description" placeholder="Description">
					</div>
					<div class="form-group">
						<label for="InputVideoUrl">Video Url</label>
						<input type="text" class="form-control" id="InputVideoUrl" asp-for="VideoUrl" placeholder="Video Url">
					</div>
					<div class="form-group">
						<label for="InputVideoDescription">Video Description</label>
						<input type="text" class="form-control" id="InputVideoDescription" asp-for="VideoDescription" placeholder="Video Description">
					</div>

					<button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
				</form>

			</div>
		</div>
	</div>
</div>



