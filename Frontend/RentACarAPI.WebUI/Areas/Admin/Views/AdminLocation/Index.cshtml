@model List<ResultLocationDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Location List</h4>
				<p class="card-subtitle mb-4">
					Use table to view locations, delete them and navigating to create and update forms.
				</p>
				<div class="table-responsive">
					@if (Model.Any())
					{
						<table class="table mb-0">
							<thead>
								<tr>
									<th>#</th>
									<th>Locaiton</th>
									<th>Update</th>
									<th>Delete</th>
									<th>Open Location</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@count</td>
										<td>@item.Name</td>
										<td>
											<a href="/Admin/AdminLocation/UpdateLocation/@item.LocationID" type="button" class="btn btn-outline-warning waves-effect waves-light">Update</a>
										</td>
										<td>
											<a href="/Admin/AdminLocation/RemoveLocation/@item.LocationID" type="button" class="btn btn-outline-danger waves-effect waves-light">Delete</a>
										</td>
										<td>
											<a href="/Admin/AdminLocation/LocationDetail/@item.LocationID" type="button" class="btn btn-outline-dark waves-effect waves-light">Open</a>
										</td>
									</tr>
									count++;
								}
							</tbody>
						</table>
					}
					else
					{
						<div class="card text-white bg-warning">
							<div class="card-body">
								<blockquote class="card-bodyquote mb-0">
									<p>
										There are no locations here yet.
									</p>
									<footer class="blockquote-footer text-white-50">
										No Data in <cite title="Source Title">Locations</cite>
									</footer>
								</blockquote>
							</div>
						</div>
					}

					<a href="/Admin/AdminLocation/CreateLocation" type="button" class="btn btn-outline-secondary waves-effect waves-light">New Location</a>

				</div>

			</div>

		</div>

	</div>
</div>







