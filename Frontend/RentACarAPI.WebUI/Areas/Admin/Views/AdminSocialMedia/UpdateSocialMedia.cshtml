@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Update SocialMedia(@Model.SocialMediaID)</h4>
				<p class="card-subtitle mb-4">Please fullfill all the fields with required information.</p>

				<form method="post">
					<input type="hidden" asp-for="SocialMediaID" />

					<div class="form-group">
						<label for="Name">Title</label>
						<input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Name">
					</div>
					<div class="form-group">
						<label for="Url">SocialMedia</label>
						<input type="text" class="form-control" id="Url" asp-for="Url" placeholder="Url">
					</div>
					<div class="form-group">
						<label for="Icon">Icon Url</label>
						<input type="text" class="form-control" id="Icon" asp-for="Icon" placeholder="Icon">
					</div>

					<button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
				</form>

			</div>
		</div>
	</div>
</div>







