@model List<ResultBlogWithIncludesDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 1;
}

<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Blog List</h4>
				<p class="card-subtitle mb-4">
					Use this table to view blogs, delete them or navigate to create and update forms.
				</p>
				<div class="table-responsive">
					@if (Model.Any())
					{
						<table class="table mb-0">
							<thead>
								<tr>
									<th>#</th>
									<th>Title</th>
									<th>Category</th>
									<th>Author</th>
									<th>Date</th>
									<th>Update</th>
									<th>Delete</th>
									<th>Open Blog</th>
									<th>Comments</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th scope="row">@count</th>
										<td><img class="rounded-circle" style="margin-right:5px;" src="@item.CoverImageUrl" width="50" height="50" /> @item.Title</td>
										<td>@item.CategoryName</td>
										<td><img class="rounded-circle" style="margin-right:5px;" src="@item.AuthorImageUrl" width="50" height="50" /> @item.AuthorName</td>
										<td>@DateTime.Parse(item.CreatedDate.ToString()).ToString("d. MMM, yyyy")</td>
										<td>
											<a href="/Admin/AdminBlog/UpdateBlog/@item.BlogID" type="button" class="btn btn-outline-warning waves-effect waves-light">Update</a>
										</td>
										<td>
											<a href="/Admin/AdminBlog/RemoveBlog/@item.BlogID" type="button" class="btn btn-outline-danger waves-effect waves-light">Delete</a>
										</td>
										<td>
											<a href="/Blog/BlogDetail/@item.BlogID" type="button" class="btn btn-outline-info waves-effect waves-light">Open</a>
										</td>
										<td>
											<a href="/Admin/AdminComment/CommentsByBlog/@item.BlogID" type="button" class="btn btn-outline-dark waves-effect waves-light">Comments</a>
										</td>
									</tr>
									count++;
								}
							</tbody>
						</table>
					}
					else
					{
						<div class="card text-white bg-warning">
							<div class="card-body">
								<blockquote class="card-bodyquote mb-0">
									<p>
										There are no blogs here yet.
									</p>
									<footer class="blockquote-footer text-white-50">
										No Data in <cite title="Source Title">Categories</cite>
									</footer>
								</blockquote>
							</div>
						</div>
					}

					<a href="/Admin/AdminBlog/CreateBlog" type="button" class="btn btn-outline-secondary waves-effect waves-light">New Blog</a>

				</div>

			</div>

		</div>

	</div>
</div>











