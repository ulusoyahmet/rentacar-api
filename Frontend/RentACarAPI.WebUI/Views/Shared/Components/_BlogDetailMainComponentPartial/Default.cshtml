@model ResultBlogWithIncludesDto
<div class="col-md-8 ftco-animate">

    <h2 class="mb-3">@Model.Title</h2>
    <p>
        <img src="@Model.CoverImageUrl" alt="" class="img-fluid">
    </p>
    <p>@Model.Body</p>
    
    @await Component.InvokeAsync("_BlogDetailTagCloudByBlogComponentPartial", new { id = ViewBag.blogId })

    @await Component.InvokeAsync("_BlogDetailAboutAuthorComponentPartial", new { id = ViewBag.blogId })

    <div class="pt-5 mt-5">
        @await Component.InvokeAsync("_CommentListByBlogComponentPartial")

        @await Component.InvokeAsync("_CommentFormComponentPartial")
    </div>

</div> 