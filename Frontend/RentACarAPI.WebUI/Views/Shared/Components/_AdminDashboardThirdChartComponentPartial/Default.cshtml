@using Newtonsoft.Json;
@model List<LocationChartDto>

@{
    var labels = string.Join(",", Model.Select(x => JsonConvert.SerializeObject(x.Name)));
    var data = string.Join(",", Model.Select(x => JsonConvert.SerializeObject(x.Count)));
}

<div class="col-lg-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline-block">Location Data</h4>

            <div style="height: 260px;">
                <canvas id="my3Chart" height="220px"></canvas>
                <script>
                    var values = document.getElementById('my3Chart').getContext('2d');
                    var myChart = new Chart(values, {
                        type: 'bar',
                        data: {
                            labels: [@Html.Raw(labels)],
                            datasets: [{
                                label: 'Location Chart',
                                data: [@Html.Raw(data)],
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.7)',
                                    'rgba(54, 99, 222, 0.7)',
                                    'rgba(79, 58, 75, 0.7)',
                                    'rgba(255, 201, 93, 0.7)',
                                    'rgba(255, 147, 32, 0.7)',
                                    'rgba(75, 192, 192, 0.7)'
                                ],
                                borderColor: [
                                    'rgba(255, 99, 132, 1)',
                                    'rgba(54, 99, 222, 1)',
                                    'rgba(79, 58, 75, 1)',
                                    'rgba(255, 201, 93, 1)',
                                    'rgba(255, 147, 32, 1)',
                                    'rgba(75, 192, 192, 1)'
                                ],
                                borderWidth: 1
                            }]
                        }
                    });
                </script>
            </div>

            <div class="row text-center mt-4">
                <div class="col-6">
                    <h4>$1875.54</h4>
                    <p class="text-muted mb-0">Revenue</p>
                </div>
                <div class="col-6">
                    <h4>@Model.Count</h4>
                    <p class="text-muted mb-0">Total Locations</p>
                </div>
            </div>
        </div>
    </div>
</div>
