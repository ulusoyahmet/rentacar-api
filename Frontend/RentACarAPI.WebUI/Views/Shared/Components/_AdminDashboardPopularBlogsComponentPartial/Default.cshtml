@model List<ResultBlogWithIncludesDto>

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Popular Blogs</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Blogs for current Date: @DateTime.Now.ToString("D")
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tbody>
                        @foreach(var item in Model)
                        {
                        <tr>
                            <td>
                                <h5 class="font-size-15 mb-1 font-weight-normal">
                                    @item.Title
                                </h5>
                                <span class="text-muted font-size-12">
                                   @DateTime.Parse(item.CreatedDate.ToString()).ToString("dd MMMM yyyy")
                                </span>
                            </td>
                            <td>
                                <h5 class="font-size-15 mb-1 font-weight-normal">@item.CommentCount</h5>
                                <span class="text-muted font-size-12">Comments</span>
                            </td>
                            <td>
                                <h5 class="font-size-15 mb-1 font-weight-normal">
                                    @item.AuthorName
                                </h5>
                                <span class="text-muted font-size-12">Author</span>
                            </td>
                            <td>
                                <a href="/Blog/BlogDetail/@item.BlogID" type="button" class="btn btn-outline-info waves-effect waves-light">Open</a>
                            </td>
                        </tr>                            
                        }
                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>
