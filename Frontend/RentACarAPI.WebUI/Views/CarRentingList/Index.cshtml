@model List<ResultCarRentingFilterDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row mb-5">

            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="car-wrap rounded ftco-animate">

                            <div class="img rounded d-flex align-items-end" style="background-image: url(@item.CoverImageUrl);">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="#">@item.Model</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@item.BrandName</span>
                                    @{
                                        var dailyPriceInfo = item.CarPricings?.FirstOrDefault(p => p.PricingName == "per day");
                                        var displayPrice = dailyPriceInfo != null ? dailyPriceInfo.Amount.ToString("0.00") : "N/A";
                                    }
                                    <p class="price ml-auto">$@displayPrice <span>/day</span></p>
                                </div>
                                <p class="d-flex mb-0 d-block">

                                    <a href="#" class="btn btn-primary py-2 mr-1">Book now</a>
                                    <a href="#" class="btn btn-secondary py-2 ml-1">Details</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No cars available at the moment. Please check back later.</p>
                </div>
            }
        </div>

        @if (Model != null && Model.Any()) // Only show pagination if there are items
        {
            <div class="row mt-5">
                <div class="col text-center">
                    <div class="block-27">
                        <ul>
                            <li><a href="#">&lt;</a></li>
                            <li class="active"><span>1</span></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">&gt;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

