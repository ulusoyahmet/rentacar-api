@model List<CarWithPricingDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Per Hour Rate</th>
								<th class="bg-dark heading">Per Day Rate</th>
								<th class="bg-black heading">Leasing</th>
							</tr>
						</thead>
						<tbody>
							@foreach(var item in Model)
							{
								
							var hourlyPriceInfo = item.CarPricings?.FirstOrDefault(p => p.PricingName == "per hour");
							var hourlyPrice = hourlyPriceInfo != null ? hourlyPriceInfo.Amount.ToString("0.00") : "N/A";

							var dailyPriceInfo = item.CarPricings?.FirstOrDefault(p => p.PricingName == "per day");
							var dailyPrice = dailyPriceInfo != null ? dailyPriceInfo.Amount.ToString("0.00") : "N/A";

							var monthlyPriceInfo = item.CarPricings?.FirstOrDefault(p => p.PricingName == "per month");
							var monthlyPrice = monthlyPriceInfo != null ? monthlyPriceInfo.Amount.ToString("0.00") : "N/A";
									
							<tr class="">
								<td class="car-image"><div class="img" style="background-image:url(@item.CoverImageUrl);"></div></td>
								<td class="product-name">
									<h3>@item.Model</h3>
									<p class="mb-0 rated">
										<span>rated:</span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
										<span class="ion-ios-star"></span>
									</p>
								</td>
									
								<td class="price">
									<p class="btn-custom"><a href="#">Rent a car</a></p>
									<div class="price-rate">
										<h3>
												
											<span class="num"><small class="currency">$</small> @hourlyPrice</span>
											<span class="per">/per hour</span>
										</h3>
										<span class="subheading">$3/hour fuel surcharges</span>
									</div>
								</td>

								<td class="price">
									<p class="btn-custom"><a href="#">Rent a car</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">$</small> @dailyPrice</span>
											<span class="per">/per day</span>
										</h3>
										<span class="subheading">$3/hour fuel surcharges</span>
									</div>
								</td>

								<td class="price">
									<p class="btn-custom"><a href="#">Rent a car</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">$</small> @monthlyPrice</span>
											<span class="per">/per month</span>
										</h3>
										<span class="subheading">$3/hour fuel surcharges</span>
									</div>
								</td>
							</tr><!-- END TR-->
							}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>

